<div class="span-8 last left-sidebar" >
	<%= form_tag(qa_path('0'), :method => "get", :id => 'engine_picker' ) do %>
	  <%= label_tag(:engine, "Select Product") %>&nbsp;&nbsp;
  	  <%= select "engine", "index", records_for_picker(@records), { :selected => @selected_engine },   {:class => "pretty" } %>
    <% end %>	
</div>

<div id="product-description" class="span-8 last left-sidebar" >
	<div class="span-8 last">
	  <h3 class="span-6">Acme <%=  @records[@selected_engine]['Name'] %></h3>
	  <button name="follow" type="submit" id="follow-button" class="cssbutton medium blue span-2 last" ><span style="font-size: 10pt;">Follow</span></button>
	</div>
  	
    <div class="span-8 last image">
	  <%= image_tag "engine#{@selected_engine}.jpg", :size => "200x200" %>
	</div>
	<h4>Product Description</h4>
	<p><%= @records[@selected_engine]['Description__c'] %></p>
</div>

<div class="span-8 last left-sidebar" >
  	<h4>Specifications</h4>
    <div  class="span-6 last">
	  Amps:&nbsp;&nbsp;<%= @records[@selected_engine]['Amps__c'].round %>
	</div>
	<div  class="span-6 last">
	  Voltage:&nbsp;&nbsp;<%= @records[@selected_engine]['Voltage__c'].round %>
	</div>
	<div  class="span-6 last">
	  Hertz:&nbsp;&nbsp;<%= @records[@selected_engine]['Hertz__c'].round %>
	</div>
	
</div>